<h1>Update Song Information</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label>Name: </label>  <br>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>"> <br>

  <label>Artist Name: </label> <br>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>" id="artist_name">  <br>

  <label>Choose one or more genres for the song:</label>  <br>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_id][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <br>
  <input type="submit" value="Save">

</form>